{
    "name": "love-launcher",
    "displayName": "love-launcher",
    "description": "Launches your project in Löve",
    "version": "0.0.1",
    "publisher": "JanW",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:lövelauncher.launch"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "lövelauncher.launch",
            "title": "Launch Löve"
        }],
        "keybindings":[
            {
                "command": "lövelauncher.launch",
                "key": "Alt+L"
            }
        ],
        "configuration": {
			"type": "object",
			"title": "Löve Launcher config",
			"properties": {
				"lövelauncher.path": {
					"type": "string",
					"description": "Set Path to your love executable.",
					"default": "C:\\Program Files\\LOVE\\love.exe"
				},
                "lövelauncher.maxInstances": {
					"type": "integer",
					"description": "Set the max amount of instance you want to be able to spawn at the same time.",
					"default": 1
				}
			}
		}
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}